# source files.
SRC = simple_list_object.f90 simple_d_array.f90 simple_r_array.f90 simple_i_array.f90 simple_jiffys.f90 simple_d_scalar.f90 simple_def_precision.f90 simple_r_scalar.f90 simple_i_scalar.f90

OBJ = $(SRC:.f90=.o)

OUT = libsimple.a

# include directories
#INCLUDES = -I. -I../include/ -I/usr/local/include

# C++ compiler flags (-g -O2 -Wall)
#CCFLAGS = -g

# compiler
F90=ifort

# library paths
#LIBS = -L../ -L/usr/local/lib -lm

# compile flags
#LDFLAGS = -g

.SUFFIXES: .f90

default: dep $(OUT)

#.f90.o:
#	$(CCC) $(INCLUDES) $(CCFLAGS) -c $< -o $@

.f90.o:
	$(F90) $(INCLUDES) -c $< -o $@ 

$(OUT): $(OBJ)
	ar rcs $(OUT) $(OBJ)

depend: dep

#dep:
#	makedepend -- $(CFLAGS) -- $(INCLUDES) $(SRC)

dep:
	makedepend -- $(INCLUDES) $(SRC)

clean:
	rm -f $(OBJ) $(OUT) Makefile.bak # DO NOT DELETE
